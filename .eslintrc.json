{
	"extends": "eslint:recommended",
	"env": {
		"browser": true,
		"es6": true
	},
	"parserOptions": {
		"ecmaVersion": 2017
	},
	"rules": {
		"indent": [
			"error",
			"tab",
			{
				"ignoreComments": true,
				"SwitchCase": 1
			}
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"no-console": 0,
		"no-empty": 0,
		"no-undef": 0,
		"quotes": [
			"error",
			"double",
			{"avoidEscape": true}
		],
		"semi": [
			"error",
			"always"
		],
		"spaced-comment": [
			"error",
			"always"
		]
	}
}
